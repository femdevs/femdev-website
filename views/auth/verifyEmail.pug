include ../mixins.pug
doctype html
html(lang="en")
	head
		+header()
	body.bg-neutral-400
		div.w-fit.min-w-96.mx-auto.my-10
			div.bg-white.border.border-gray-200.rounded-xl.shadow-sm.mt-7(class="dark:bg-neutral-900 dark:border-neutral-700")
				div.p-4(class="sm:p-7")
					div.mt-5
						form(method="post")
							div.grid.gap-y-4
								div
									img(src="https://cdn.thefemdevs.com/assets/images/icon/pink" alt="FemDevs Logo" class="w-[25rem] mx-auto")
								div
									h1.text-2xl.font-semibold.text-neutral-900.text-center(class="dark:text-white") Verify your Email Address
								div.h-4.block
								div
									label.block.text-sm.mb-2(for="email" class="dark:text-white") Email Address
									div.relative
										input.py-3.px-4.block.w-full.border-gray-200.rounded-lg.text-sm.border(type="email" id="email" name="email" class="focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" required)
								input.w-full.py-3.px-4.inline-flex.justify-center.items-center.gap-x-2.text-sm.font-semibold.rounded-lg.border.border-transparent.bg-blue-600.text-white(type="submit" class="hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" value="Verify")