include ../../../mixins.pug
doctype html
html(lang="en")
  head
    +header()
    script(src="https://cdn.jsdelivr.net/npm/preline@latest/dist/index.js")
  body
    +adminNav()
    main
      div(class="max-w-4xl px-4 py-10 sm:px-6 lg:px-8 mx-auto")
        div(class="bg-white rounded-xl shadow p-4 sm:p-7 dark:bg-neutral-800")
          div(class="mb-8")
            h2(class="text-xl font-bold text-gray-800 dark:text-neutral-200") Create a User
            p(class="text-sm text-gray-600 dark:text-neutral-400") Enter in the new user's information including their name, email address, and more.
          form(method="post")
            div
              div(class="sm:col-span-3")
                label(for="af-account-full-name" class="inline-block text-sm text-gray-800 mt-2.5 dark:text-neutral-200") Full name
              div(class="sm:col-span-9")
                div(class="sm:flex")
                  input(required='' name="firstname" id="af-account-full-name" type="text" class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm -mt-px -ms-px first:rounded-t-lg last:rounded-b-lg sm:first:rounded-s-lg sm:mt-0 sm:first:ms-0 sm:first:rounded-se-none sm:last:rounded-es-none sm:last:rounded-e-lg text-sm relative focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-800 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600")
                  input(required='' name="lastname" type="text" class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm -mt-px -ms-px first:rounded-t-lg last:rounded-b-lg sm:first:rounded-s-lg sm:mt-0 sm:first:ms-0 sm:first:rounded-se-none sm:last:rounded-es-none sm:last:rounded-e-lg text-sm relative focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-800 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600")
              div(class="sm:col-span-3")
                label(for="af-account-email" class="inline-block text-sm text-gray-800 mt-2.5 dark:text-neutral-200") Email
              div(class="sm:col-span-9")
                input(required='' name="email" id="af-account-email" type="email" class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm text-sm rounded-lg focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-800 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600")
              div(class="sm:col-span-3")
                label(for="af-account-display" class="inline-block text-sm text-gray-800 mt-2.5 dark:text-neutral-200") Display Name
              div(class="sm:col-span-9")
                input(required='' name="displayname" id="af-account-display" type="text" class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm text-sm rounded-lg focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-800 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600")
              div(class="sm:col-span-3")
                label(for="af-account-password" class="inline-block text-sm text-gray-800 mt-2.5 dark:text-neutral-200") Password
              div(class="sm:col-span-9")
                input(required='' name="password" id="af-account-password" type="password" class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-800 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600")
              div(class="sm:col-span-3")
                label(for="af-account-permissions" class="inline-block text-sm text-gray-800 mt-2.5 dark:text-neutral-200") Permissions
              div(class="sm:col-span-9")
                input(required='' name="permissions" id="af-account-permissions" type="text" class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-800 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600")
              div(class="sm:col-span-3")
                label(for="af-account-phone" class="inline-block text-sm text-gray-800 mt-2.5 dark:text-neutral-200") Phone 
                  span(class="text-sm text-gray-400 dark:text-neutral-600") (Optional)
              div(class="sm:col-span-9")
                input(name="phone" id="af-account-phone" type="text" class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm -mt-px -ms-px first:rounded-t-lg last:rounded-b-lg sm:first:rounded-s-lg sm:mt-0 sm:first:ms-0 sm:first:rounded-se-none sm:last:rounded-es-none sm:last:rounded-e-lg text-sm relative focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-800 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600")
            div(class="mt-5 flex justify-end gap-x-2")
              input(type="submit" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" name="Save changes")
